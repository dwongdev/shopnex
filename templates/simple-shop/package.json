{
  "name": "simple-shop",
  "version": "1.0.0",
  "description": "A complete e-commerce template with Payload CMS, products, orders, and store management",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
    "dev": "cross-env NODE_OPTIONS=\"${NODE_OPTIONS} --no-deprecation\" next dev",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=\"${NODE_OPTIONS} --no-deprecation\" next dev",
    "db:seed": "payload run ./src/seed",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "payload generate:types",
    "generate:schema": "payload generate:db-schema",
    "migrate:create": "cross-env NODE_OPTIONS=--no-deprecation payload migrate:create",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "lint:quiet": "cross-env NODE_OPTIONS=--no-deprecation next lint --quiet",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "test": "pnpm run test:int && pnpm run test:e2e",
    "test:e2e": "cross-env NODE_OPTIONS=\"--no-deprecation --no-experimental-strip-types\" pnpm exec playwright test",
    "test:int": "cross-env NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@payloadcms/db-sqlite": "3.56.0",
    "@payloadcms/plugin-seo": "3.56.0",
    "@payloadcms/next": "3.56.0",
    "@payloadcms/ui": "3.56.0",
    "@shopnex/analytics-plugin": "0.0.4",
    "@shopnex/cj-plugin": "1.0.10",
    "@shopnex/import-export-plugin": "^3.31.3",
    "@shopnex/payload-sdk": "^3.1.7",
    "@shopnex/quick-actions-plugin": "^0.0.4",
    "@shopnex/sidebar-plugin": "0.0.2",
    "@shopnex/store-plugin": "^1.0.15",
    "@shopnex/stripe-plugin": "^3.31.10",
    "@shopnex/utils": "^1.0.6",
    "@tailwindcss/postcss": "^4.1.3",
    "@tailwindcss/typography": "^0.5.16",
    "@tiptap/extension-color": "^3.4.1",
    "@tiptap/extension-highlight": "^3.4.1",
    "@tiptap/extension-image": "^3.4.1",
    "@tiptap/extension-text-style": "^3.4.1",
    "@tiptap/react": "^3.0.9",
    "@tiptap/starter-kit": "^3.0.9",
    "axios": "^1.12.0",
    "cheerio": "^1.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "currency-codes": "^2.2.0",
    "decimal.js": "^10.5.0",
    "dotenv": "16.4.7",
    "graphql": "^16.8.1",
    "js-cookie": "^3.0.5",
    "jsdom": "^26.0.0",
    "libsql": "^0.5.13",
    "lodash": "^4.17.21",
    "lucide-react": "^0.484.0",
    "next": "15.4.4",
    "payload": "3.56.0",
    "postcss": "^8.5.4",
    "pretty": "^2.0.0",
    "rate-limiter-flexible": "^6.2.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-use-cart": "^1.14.0",
    "recharts": "^2.15.1",
    "sharp": "0.34.2",
    "slugify": "^1.6.6",
    "stripe": "^17.7.0"
  },
  "devDependencies": {
    "@playwright/test": "1.54.1",
    "@testing-library/react": "16.3.0",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^22.5.4",
    "@types/pretty": "^2.0.3",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@types/stripe": "^8.0.417",
    "@vitejs/plugin-react": "4.5.2",
    "eslint": "^9.16.0",
    "eslint-config-next": "15.4.4",
    "jsdom": "26.1.0",
    "playwright": "1.54.1",
    "playwright-core": "1.54.1",
    "prettier": "^3.4.2",
    "tw-animate-css": "^1.3.4",
    "typescript": "5.7.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp"
    ],
    "overrides": {
      "tar-fs": "^3.0.9",
      "esbuild": "^0.25.0",
      "image-size": "^1.2.1",
      "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.2/xlsx-0.20.2.tgz"
    }
  }
}
